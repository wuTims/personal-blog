# Cloudflare Workers Deployment
# Copy this file to .env and fill in your actual values

# Get your API token from: https://dash.cloudflare.com/profile/api-tokens
# Create a token with "Edit Cloudflare Workers" permissions
CLOUDFLARE_API_TOKEN=

# Get your Account ID from: https://dash.cloudflare.com/ (right sidebar)
CLOUDFLARE_ACCOUNT_ID=

# Media CDN URL (R2 public bucket)
VITE_MEDIA_BASE_URL=https://media.wutims.com

# Newsletter (beehiiv)
# Get your API key from: beehiiv dashboard → Settings → Integrations → API
BEEHIIV_API_KEY=
# Get your publication ID from: beehiiv dashboard → Settings → Integrations
BEEHIIV_PUBLICATION_ID=
